<div class="container">
  <h3>Mes commandes :</h3>

  <% @orders.each do |order| %>
    <div class="d-flex justify-content-between bg-white rounded p-2 my-4 align-items-center">
      <div>
        <p class="fw-bold"><%= order.book.name %></p>
        <p class="fw-light">Commande du <%= order.created_at.strftime('%D') %></p>
      </div>
      <%= link_to "voir plus", order_path(order), class: "me-2 btn btn-purple"%>
    </div>
  <% end %>

</div>
