<div class="container">
  <div class="row">
    <div class="col-6 ">

      <h2>S'inscrire</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :username,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "username" },
                        label: "Nom d'utilisateur"%>
          <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" },
                        label: "Mot de passe" %>
          <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" },
                        label: "Confirmer le mot de passe" %>

          <div class="d-flex justify-content-between">
            <%= f.input :first_name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "first_name" },
                          label: "PrÃ©nom" %>
            <%= f.input :last_name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "last_name" },
                          label: "Nom de famille"%>
          </div>

            <%= f.input :address,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "address" },
                        label: "Adresse"%>

            <div class="d-flex justify-content-between">
              <%= f.input :postal_code,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "postal_code" },
                          label: "Code postal"%>
              <%= f.input :city,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "city" },
                          label: "Ville"%>
            </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "S'inscrire", class:"btn btn-purple" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
